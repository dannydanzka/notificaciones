<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tituloIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cálculo de Indice de Masa Corporal (IMC)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="24dp"/>

    <!-- Campo para peso -->
    <EditText
        android:id="@+id/edtPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa peso en kilogramos"
        android:inputType="numberDecimal"/>

    <!-- Campo para estatura -->
    <EditText
        android:id="@+id/edtEstatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa altura en metros"
        android:inputType="numberDecimal"/>

    <!-- Botón para calcular -->
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular IMC"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>

    <!-- Botón para limpiar -->
    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="24dp"
        android:background="@android:color/darker_gray"/>

    <!-- Título para notificaciones -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejemplo de Notificación"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <!-- Botón para notificación básica -->
    <Button
        android:id="@+id/btnBasica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Básica"/>

    <!-- Botón para notificación con toque -->
    <Button
        android:id="@+id/btnToque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acción de toque"/>

    <!-- Botón para notificación con botón de acción -->
    <Button
        android:id="@+id/btnAccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Botón de acción"/>

    <!-- Botón para notificación con barra de progreso -->
    <Button
        android:id="@+id/btnProgreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Barra de progreso"/>

</LinearLayout>
