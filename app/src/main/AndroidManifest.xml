<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roberto.notificaciones">

    <!-- Permiso para enviar notificaciones -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notificaciones">

        <!-- Declaraci贸n de la MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaraci贸n de la PendingActivity -->
        <activity android:name=".PendingActivity" />

        <!-- Declaraci贸n de la FormularioActivity -->
        <activity android:name=".FormularioActivity" />

        <!-- Declaraci贸n de la InfoActivity -->
        <activity android:name=".InfoActivity" />

    </application>
</manifest>
